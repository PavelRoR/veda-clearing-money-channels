#reveiws
    padding 93px 0 30px
    background-color #000
    background-image: radial-gradient( 50% 50%, circle closest-side, rgb(97,98,100) 0%, rgb(0,0,0) 100%);
.carousel-inner.text_revs_carousel-inner
.video_revs_carousel-inner
    max-width 850px
    margin 0 auto
.text_rev_item
    a
        min-height 400px
        background-color #fff
        width 80%
        margin 0 auto
        display flex
        align-items: center
        border-radius: 5px
        img
            margin 0 auto
            display block
            width 100%
            border-radius: 10px
.carousel-indicators
    position relative
    bottom -15px
.carousel-indicators li
    width 10px
    height 10px
    background-color: transparent
    border 2px solid #d8cf92
    margin 1px 5px
.carousel-indicators .active
    background-color: #d8cf92
    margin 1px 5px
    width 10px
    height 10px
.controls
    position: absolute
    top 35%
    width 100%
    max-width 850px
    margin 0 auto
    left 0
    right 0
    // overflow hidden
    height 0
.carousel-control
    position: static
    border-radius: 50%;
    width: 50px;
    height: 50px;
    font-size: 40px
    line-height: 40px
    color #fff
    opacity 1
    display block
    text-shadow: 0
    box-shadow 0 0 5px rgba(#ffffbe, .24) inset
.carousel-control.left
.carousel-control.right
    background-color: rgb(128,110,63)
    background-image: linear-gradient( 0deg, rgb(128,110,63) 15%, rgb(226,218,155) 100%);
.carousel-control.left
    float left
.carousel-control.right
    float: right
#carousel_video
    margin-top: 65px
.carousel_video_wrapper
    width 100%
    max-width 444px
    margin 0 auto
    img
        border-radius: 10px
.video_controls
    width 100%
    max-width 650px